---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about" class="py-16 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">{t('about.title')}</h2>
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <p class="text-lg text-gray-600 mb-6">
          {t('about.description1')}
        </p>
        <p class="text-lg text-gray-600">
          {t('about.description2')}
        </p>
      </div>
      <div class="bg-gray-100 p-8 rounded-lg">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('about.quickFacts')}</h3>
        <ul class="space-y-3">
          <li class="flex items-center">
            <span class="w-32 text-gray-600">{t('about.location')}:</span>
            <span class="font-medium">San Francisco, CA</span>
          </li>
          <li class="flex items-center">
            <span class="w-32 text-gray-600">{t('about.experience')}:</span>
            <span class="font-medium">5+ Years</span>
          </li>
          <li class="flex items-center">
            <span class="w-32 text-gray-600">{t('about.education')}:</span>
            <span class="font-medium">B.S. Computer Science</span>
          </li>
          <li class="flex items-center">
            <span class="w-32 text-gray-600">{t('about.languages')}:</span>
            <span class="font-medium">English, Spanish</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>