---
import { getLangFromUrl, useTranslations } from '../../utils/i18n';
import { CSSIcon, DockerIcon, GitIcon, NodeIcon, PythonIcon, ReactIcon, SQLIcon, AWSIcon, VueIcon } from '../../icons';
import SkillBar from '../ui/SkillBar.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="skills" class="py-16 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">{t('skills.title')}</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="p-6 bg-gray-50 rounded-lg transition-transform duration-500 hover:scale-110">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Frontend</h3>
        <ul class="space-y-2">
          <li>
            <SkillBar progress="90">
              <ReactIcon class="w-6 h-6 mr-2" />
              Next.js
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="75">
              <VueIcon class="w-6 h-6 mr-2" />
              Vue.js
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="80">
              <CSSIcon class="w-6 h-6 mr-2" />
              CSS/SCSS
            </SkillBar>
          </li>
        </ul>
      </div>
      <div class="p-6 bg-gray-50 rounded-lg transition-transform duration-500 hover:scale-110">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Backend</h3>
        <ul class="space-y-2">
          <li>
            <SkillBar progress="88">
              <NodeIcon class="w-6 h-6 mr-2" />
              Node.js
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="75">
              <PythonIcon class="w-6 h-6 mr-2" />
              Python
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="82">
              <SQLIcon class="w-6 h-6 mr-2" />
              SQL
            </SkillBar>
          </li>
        </ul>
      </div>
      <div class="p-6 bg-gray-50 rounded-lg transition-transform duration-500 hover:scale-110">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Tools & Others</h3>
        <ul class="space-y-2">
          <li>
            <SkillBar progress="92">
              <GitIcon class="w-6 h-6 mr-2" />
              Git
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="78">
              <DockerIcon class="w-6 h-6 mr-2" />
              Docker
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="70">
              <AWSIcon class="w-6 h-6 mr-2" />
              AWS
            </SkillBar>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>