---
import { getLangFromUrl, useTranslations } from '../../utils/i18n';
import { GitIcon, NodeIcon, PythonIcon, ReactIcon, AWSIcon, VueIcon, TypeScriptIcon } from '../../icons';
import SkillBar from '../ui/SkillBar.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="skills" class="py-16 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">{t('skills.title')}</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="p-6 bg-gray-50 rounded-lg transition-transform duration-500 hover:scale-110">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('skills.frontend')}</h3>
        <ul class="space-y-2">
          <li>
            <SkillBar progress="90">
              <ReactIcon class="w-6 h-6 mr-2" />
              Next.js
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="82">
              <TypeScriptIcon class="w-6 h-6 mr-2" />
              TS
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="60">
              <VueIcon class="w-6 h-6 mr-2" />
              Vue.js
            </SkillBar>
          </li>
        </ul>
      </div>
      <div class="p-6 bg-gray-50 rounded-lg transition-transform duration-500 hover:scale-110">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('skills.backend')}</h3>
        <ul class="space-y-2">
          <li>
            <SkillBar progress="82">
              <PythonIcon class="w-6 h-6 mr-2" />
              Python
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="70">
              <NodeIcon class="w-6 h-6 mr-2" />
              Node.js
            </SkillBar>
          </li>
        </ul>
      </div>
      <div class="p-6 bg-gray-50 rounded-lg transition-transform duration-500 hover:scale-110">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('skills.tools')}</h3>
        <ul class="space-y-2">
          <li>
            <SkillBar progress="80">
              <div class="w-5 h-5 bg-black mr-3 [clip-path:polygon(50%_0%,100%_25%,100%_75%,50%_100%,0%_75%,0%_25%)]" />
              Web3
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="75">
              <GitIcon class="w-6 h-6 mr-2" />
              Git
            </SkillBar>
          </li>
          <li>
            <SkillBar progress="68">
              <AWSIcon class="w-6 h-6 mr-2" />
              AWS
            </SkillBar>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>