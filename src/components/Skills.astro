---
import { getLangFromUrl, useTranslations } from '../utils/i18n';
import { CSSIcon, DockerIcon, GitIcon, NodeIcon, PythonIcon, ReactIcon, SQLIcon, AWSIcon, VueIcon } from '../icons';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="skills" class="py-16 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">{t('skills.title')}</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="p-6 bg-gray-50 rounded-lg">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Frontend</h3>
        <ul class="space-y-2">
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <ReactIcon class="w-6 h-6 mr-2" />
              React
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[90%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <VueIcon class="w-6 h-6 mr-2" />
              Vue.js
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[75%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <CSSIcon class="w-6 h-6 mr-2" />
              CSS/SCSS
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[80%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
        </ul>
      </div>
      <div class="p-6 bg-gray-50 rounded-lg">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Backend</h3>
        <ul class="space-y-2">
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <NodeIcon class="w-6 h-6 mr-2" />
              Node.js
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[88%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <PythonIcon class="w-6 h-6 mr-2" />
              Python
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[75%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <SQLIcon class="w-6 h-6 mr-2" />
              SQL
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[82%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
        </ul>
      </div>
      <div class="p-6 bg-gray-50 rounded-lg">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Tools & Others</h3>
        <ul class="space-y-2">
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <GitIcon class="w-6 h-6 mr-2" />
              Git
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[92%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <DockerIcon class="w-6 h-6 mr-2" />
              Docker
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[78%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
          <li class="flex items-center gap-2">
            <span class="w-24 flex items-center">
              <AWSIcon class="w-6 h-6 mr-2" />
              AWS
            </span>
            <div class="flex-1 bg-gray-200 rounded-full h-2">
              <div class="w-[70%] bg-blue-600 h-2 rounded-full"></div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>